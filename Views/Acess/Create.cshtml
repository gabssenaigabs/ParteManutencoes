@model CondoHub.Models.Entities.Access
@{
    ViewData["Title"] = "Registrar Acesso";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <h3 class="app-title">Registrar Acesso</h3>
                <p class="app-subtitle mb-0">Registre a entrada de um visitante no prédio</p>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <style>
                        .form-control,
                        .form-select {
                            border: 1.5px solid #e0e0e0;
                            border-radius: 12px;
                            padding: .55rem .75rem;
                            font-size: 1rem;
                        }

                        .form-select {
                            appearance: none;
                            background-image: none !important;
                            padding-right: .75rem;
                        }

                        textarea.form-control {
                            min-height: 110px;
                            resize: vertical;
                        }

                        .form-label {
                            font-weight: 500;
                        }

                        .custom-option {
                            border-radius: 12px !important;
                            border: 1.5px solid #e0e0e0 !important;
                            background: #fff !important;
                            color: #333 !important;
                            padding: .55rem .75rem !important;
                            display: flex !important;
                            align-items: center !important;
                        }

                        .contract-action-buttons .contract-btn {
                            min-width: 140px;
                        }
                    </style>
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label class="form-label fw-500">Nome</label>
                            <input asp-for="Nome" class="form-control" placeholder="Nome" />
                            <span asp-validation-for="Nome" class="text-danger small"></span>
                        </div>


                        <div class="form-group mb-3">
                            <label class="form-label fw-500">Tipo de Visitante</label>
                            <select asp-for="Cargo" id="Cargo" class="form-select">
                                <option value="">Selecione...</option>
                                <option value="Morador">Morador</option>
                                <option value="Síndico">Síndico</option>
                                <option value="Gestor">Gestor</option>
                                <option value="Visitante">Visitante</option>
                                <option value="Funcionário">Funcionário</option>
                                <option value="PrestadorServico">Prestador de Serviços</option>
                            </select>
                            <span asp-validation-for="Cargo" class="text-danger small"></span>
                        </div>

                        <div id="aptoField" class="form-group mb-3" style="display:none;">
                            <label class="form-label fw-500">Número do Apartamento</label>
                            <input asp-for="NumeroApartamento" class="form-control" placeholder="101, 102, 103..." />
                            <span asp-validation-for="NumeroApartamento" class="text-danger small"></span>
                        </div>

                        <div id="funcCargoField" class="form-group mb-3" style="display:none;">
                            <label class="form-label fw-500">Cargo do Funcionário</label>
                            <input asp-for="InformacaoVisitante" class="form-control"
                                placeholder="Porteiro, Zelador, Encarregado..." />
                            <span asp-validation-for="InformacaoVisitante" class="text-danger small"></span>
                        </div>

                        <div id="prestadorMotivoField" class="form-group mb-3" style="display:none;">
                            <label class="form-label fw-500">Motivo da Visita</label>
                            <textarea asp-for="Observacoes" class="form-control"
                                placeholder="Descreva o motivo da visita"></textarea>
                            <span asp-validation-for="Observacoes" class="text-danger small"></span>
                        </div>


                        <div class="form-group mb-3">
                            <label class="form-label fw-500 mb-2">Tipo de Acesso</label>
                            <div class="row g-2 mb-2">
                                <div class="col-6">
                                    <input type="radio" class="btn-check" name="TipoAcesso" id="tipoEntrada"
                                        value="Entrada" autocomplete="off" checked>
                                    <label class="btn btn-light custom-option w-100 d-flex align-items-center px-3 py-2"
                                        for="tipoEntrada">Entrada</label>
                                </div>
                                <div class="col-6">
                                    <input type="radio" class="btn-check" name="TipoAcesso" id="tipoSaida" value="Saida"
                                        autocomplete="off">
                                    <label class="btn btn-light custom-option w-100 d-flex align-items-center px-3 py-2"
                                        for="tipoSaida">Saída</label>
                                </div>
                            </div>
                            <span asp-validation-for="TipoAcesso" class="text-danger small"></span>
                        </div>



                        <div class="mt-4 contract-action-buttons">
                            <a href="@Url.Action("Index", "Acess")" class="contract-btn contract-btn-cancel">
                                Cancelar
                            </a>
                            <button type="submit" class="contract-btn contract-btn-submit">
                                Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var cargoSelect = document.getElementById('Cargo');
            var aptoField = document.getElementById('aptoField');
            var funcField = document.getElementById('funcCargoField');
            var prestField = document.getElementById('prestadorMotivoField');

            function updateFields() {
                var val = cargoSelect ? cargoSelect.value : '';
                if (val === 'Morador' || val === 'Síndico' || val === 'Visitante') {
                    aptoField.style.display = 'block';
                } else {
                    aptoField.style.display = 'none';
                    if (aptoField.querySelector('input')) aptoField.querySelector('input').value = '';
                }

                if (val === 'Funcionário') {
                    funcField.style.display = 'block';
                } else {
                    funcField.style.display = 'none';
                    if (funcField.querySelector('input')) funcField.querySelector('input').value = '';
                }

                if (val === 'PrestadorServico') {
                    prestField.style.display = 'block';
                } else {
                    prestField.style.display = 'none';
                    if (prestField.querySelector('textarea')) prestField.querySelector('textarea').value = '';
                }
            }

            if (cargoSelect) {
                cargoSelect.addEventListener('change', updateFields);
                updateFields();
            }
        });
    </script>
}